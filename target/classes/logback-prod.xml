<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Production Logging Configuration -->
  <!-- Include: JSON format for log aggregation, Rolling daily, 30-day retention, INFO level -->

  <property name="LOG_FILE_PATH" value="/var/log/loan-management"/>
  <property name="LOG_FILE_NAME" value="app"/>
  
  <!-- JSON Console Appender (for container/cloud logging) -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <includeContext>true</includeContext>
      <customFields>{"service":"loan-management-system","version":"1.0.0"}</customFields>
      <shortenedLoggerNameLength>20</shortenedLoggerNameLength>
    </encoder>
  </appender>

  <!-- JSON File Appender (Rolling daily) -->
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>${LOG_FILE_PATH}/${LOG_FILE_NAME}.json.log</file>
    <encoder class="net.logstash.logback.encoder.LogstashEncoder">
      <includeContext>true</includeContext>
      <customFields>{"service":"loan-management-system","version":"1.0.0","environment":"production"}</customFields>
      <shortenedLoggerNameLength>20</shortenedLoggerNameLength>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>${LOG_FILE_PATH}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.json.log</fileNamePattern>
      <maxFileSize>100MB</maxFileSize>
      <maxHistory>30</maxHistory>
      <totalSizeCap>3GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <!-- Async Appender for performance -->
  <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
    <queueSize>1024</queueSize>
    <discardingThreshold>0</discardingThreshold>
    <appender-ref ref="FILE"/>
  </appender>

  <!-- Logger Configurations -->
  
  <!-- Application Package (INFO level) -->
  <logger name="com.consumerfinance" level="INFO" additivity="false">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="ASYNC_FILE"/>
  </logger>

  <!-- Spring Framework (WARN level for production) -->
  <logger name="org.springframework" level="WARN"/>
  <logger name="org.springframework.boot" level="WARN"/>
  <logger name="org.springframework.web" level="INFO"/>
  <logger name="org.springframework.security" level="WARN"/>

  <!-- Hibernate (INFO level) -->
  <logger name="org.hibernate" level="WARN"/>
  <logger name="org.hibernate.SQL" level="INFO"/>

  <!-- Flyway (INFO level) -->
  <logger name="org.flywaydb" level="INFO"/>

  <!-- Root Logger Configuration -->
  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
    <appender-ref ref="ASYNC_FILE"/>
  </root>

</configuration>
